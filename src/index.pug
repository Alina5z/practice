        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="styles/style.css")
    body 
        include modules/header
        .banner
            img(src="img/banner.jpg", alt="")
        .partners-container
                .partners-container__element.partners-container__element--elem1
                .partners-container__element.partners-container__element--elem2
                .partners-container__element.partners-container__element--elem3
